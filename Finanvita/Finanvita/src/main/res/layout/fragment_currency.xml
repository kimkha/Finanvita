<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScrollView"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dynamic_margin_narrow_vertical"
    android:paddingBottom="@dimen/dynamic_margin_narrow_vertical"
    android:paddingLeft="@dimen/dynamic_margin_narrow_horizontal"
    android:paddingRight="@dimen/dynamic_margin_narrow_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_normal"
        android:paddingRight="@dimen/space_normal"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mainCurrency_TV"
                style="@style/TextView.Secondary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/space_normal"
                android:fontFamily="@string/font_light"
                tools:text="Current main currency is USD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_normal"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/code_TV"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/space_normal"
                android:textSize="@dimen/text_xxlarge"
                android:textAllCaps="true"
                android:fontFamily="@string/font_light"
                tools:text="GBP" />

            <TextView
                android:id="@+id/exchangeRate_TV"
                style="@style/TextView"
                android:textSize="@dimen/text_large"
                android:textAllCaps="true"
                android:fontFamily="@string/font_light"
                tools:text="0.1648941 \u21C4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_normal"
            android:animateLayoutChanges="true">

            <TextView
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/space_normal"
                android:text="@string/format"
                android:fontFamily="@string/font_light"/>

            <TextView
                android:id="@+id/format_TV"
                style="@style/TextView"
                android:fontFamily="@string/font_light"
                tools:text="Â£1,000.00" />

        </LinearLayout>

        <TextView
            style="@style/TextView.Secondary"
            android:layout_marginTop="@dimen/space_xxlarge"
            android:text="@string/change_account_currency"
            android:textSize="@dimen/text_large"
            android:fontFamily="@string/font_light"/>

        <View
            style="@style/Separator.Thin"
            android:layout_marginTop="@dimen/space_normal" />

        <LinearLayout
            android:id="@+id/container_V"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true" />

    </LinearLayout>
</ScrollView>