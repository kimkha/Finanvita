<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- TextView -->
    <!-- ======================================================================================================== -->

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextView.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextView.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextView.Field">
        <item name="android:layout_marginRight">@dimen/space_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.Field.Top">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">@dimen/space_large</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.Stats">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/space_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary_inverted</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/f_light_darker5</item>
    </style>

    <style name="TextView.Stats.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@color/f_light_darker2</item>
    </style>

    <!-- Button -->
    <!-- ======================================================================================================== -->

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textColor">@color/text_primary_inverted</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style name="Button.Main">
        <item name="android:textColor">@color/text_primary_inverted</item>
        <item name="android:background">@drawable/btn_main</item>
    </style>

    <style name="Button.Borderless">
        <item name="android:background">@drawable/btn_borderless</item>
    </style>

    <style name="Button.Borderless.Filter">
    </style>

    <style name="Button.Borderless.Radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">@dimen/recommended_touch_size</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn_borderless</item>
        <item name="android:paddingLeft">@dimen/space_normal</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingRight">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Borderless.Calc">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="Button.Select" parent="SpinnerAppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- ImageView -->
    <!-- ======================================================================================================== -->

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- EditText -->
    <!-- ======================================================================================================== -->

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="EditText.Field">
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- CheckBox -->
    <!-- ======================================================================================================== -->

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- List -->
    <!-- ======================================================================================================== -->

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/space_normal</item>
        <item name="android:paddingRight">@dimen/space_normal</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:listSelector">@drawable/btn_borderless</item>
    </style>

    <style name="ListView.NoDivider">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="ListView.NoDivider.NoSelector">
        <item name="android:listSelector">#0000</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/recommended_touch_size</item>
        <item name="android:paddingLeft">@dimen/space_normal</item>
        <item name="android:paddingRight">@dimen/space_normal</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
    </style>

    <!-- ScrollView -->
    <!-- ======================================================================================================== -->

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fillViewport">true</item>
    </style>

    <!-- Separator -->
    <!-- ======================================================================================================== -->

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="Separator.Thin">
        <item name="android:layout_height">@dimen/separator_thin</item>
    </style>

    <style name="Separator.Vertical">
        <item name="android:layout_width">@dimen/separator</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="Separator.Vertical.Thin">
        <item name="android:layout_width">@dimen/separator_thin</item>
    </style>

</resources>