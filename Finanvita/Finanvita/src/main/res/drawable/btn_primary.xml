<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESSED -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/f_brand_darker2" />
                    <corners android:radius="@dimen/btn_corner_radius" />
                </shape>
            </item>

            <item android:top="@dimen/btn_stroke_width">
                <shape>
                    <solid android:color="@color/f_brand_darker1" />
                    <corners android:radius="@dimen/btn_corner_radius" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- FOCUSED & CHECKED -->
    <item android:state_focused="true" android:state_checked="true" android:state_enabled="true">
        <shape>
            <solid android:color="@color/f_brand_darker1" />
            <corners android:radius="@dimen/btn_corner_radius" />
            <stroke android:color="@color/f_brand_darker2" android:width="@dimen/btn_stroke_width" />
        </shape>
    </item>

    <!-- CHECKED -->
    <item android:state_checked="true" android:state_enabled="true">
        <shape>
            <solid android:color="@color/f_brand_darker1" />
            <corners android:radius="@dimen/btn_corner_radius" />
        </shape>
    </item>

    <!-- FOCUSED -->
    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <solid android:color="@color/f_brand" />
            <corners android:radius="@dimen/btn_corner_radius" />
            <stroke android:color="@color/f_brand_darker2" android:width="@dimen/btn_stroke_width" />
        </shape>
    </item>

    <!-- NORMAL -->
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/f_brand_darker1" />
                    <corners android:radius="@dimen/btn_corner_radius" />
                </shape>
            </item>

            <item android:bottom="@dimen/btn_stroke_width">
                <shape>
                    <solid android:color="@color/f_brand" />
                    <corners android:radius="@dimen/btn_corner_radius" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- DISABLED & FOCUSED -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/f_brand_lighter2" />
            <corners android:radius="@dimen/btn_corner_radius" />
            <stroke android:color="@color/f_brand_darker2" android:width="@dimen/btn_stroke_width" />
        </shape>
    </item>

    <!-- DISABLED -->
    <item>
        <shape>
            <solid android:color="@color/f_brand_lighter2" />
            <corners android:radius="@dimen/btn_corner_radius" />
        </shape>
    </item>

</selector>