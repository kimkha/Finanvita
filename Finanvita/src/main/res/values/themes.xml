<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/bg_window</item>

        <!-- ActionBar -->
        <item name="actionBarItemBackground">@drawable/selectable_background_actionbar</item>
        <item name="popupMenuStyle">@style/PopupMenu.Actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Actionbar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Actionbar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Actionbar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Actionbar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_actionbar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_actionbar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Actionbar</item>

        <!-- Views -->
        <!--<item name="dropDownSpinnerStyle">@style/SpinnerAppTheme</item>-->
    </style>

    <!-- ActionBar -->
    <!-- ======================================================================================================== -->

    <style name="ActionBar.Solid.Actionbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_actionbar</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_actionbar</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_actionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Actionbar</item>
    </style>

    <style name="ActionBar.Transparent.Actionbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_actionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Actionbar</item>
    </style>

    <style name="PopupMenu.Actionbar" parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar</item>
    </style>

    <style name="DropDownListView.Actionbar" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_actionbar</item>
    </style>

    <style name="ActionBarTabStyle.Actionbar" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_actionbar</item>
    </style>

    <style name="DropDownNav.Actionbar" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_actionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_actionbar</item>
    </style>

    <style name="ProgressBar.Actionbar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_actionbar</item>
    </style>

    <style name="ActionButton.CloseMode.Actionbar" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="background">@drawable/btn_cab_done_actionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Actionbar.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Actionbar</item>
    </style>

    <!-- Views -->
    <!-- ======================================================================================================== -->

    <style name="SpinnerAppTheme" parent="@style/Widget.AppCompat.Spinner">
        <item name="background">@drawable/spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
    </style>
</resources>